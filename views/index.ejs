<!DOCTYPE html>
<html lang="pt-PT">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cyber Study HUD</title>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&family=Share+Tech+Mono&family=Rajdhani:wght@500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <header class="header">
      <h1>STUDY TERMINAL</h1>
    </header>

    <main>
      <div class="time-display" id="currentSession">00:00:00</div>
      
      <div class="stats-hud">
        <div class="hud-panel">
          <div class="hud-metric">
            <span class="hud-label">TODAY</span>
            <span class="hud-value" id="todayTotal">00.00m</span>
          </div>
          <div class="hud-metric">
            <span class="hud-label">WEEK</span>
            <span class="hud-value" id="weekTotal">00.00m</span>
          </div>
        </div>
        <br>
        <button class="sketch-button" id="startStopButton">ENGAGE SESSION</button>
      </div>

      <div class="session-terminal">
        <div class="terminal-header">
          <div class="terminal-lights">
            <div class="light red"></div>
            <div class="light yellow"></div>
            <div class="light green"></div>
          </div>
          <h2>SESSION ARCHIVE</h2>
        </div>
        
        <div class="session-list">
          <% sessions.forEach(session => { %>
            <div class="session-item">
              <span class="session-time">
                <%= session.startTime.toLocaleDateString() %>
                <%= session.startTime.toLocaleTimeString() %>
              </span>
              <% if(session.endTime) { %>
                <span class="session-duration">
                  <%= Math.round((session.endTime - session.startTime)/60000) %>m
                </span>
              <% } else { %>
                <span class="session-status">ACTIVE</span>
              <% } %>
            </div>
          <% }) %>
        </div>
      </div>
    </main>
  </div>

  <script src="/js/app.js"></script>
</body>
</html>