<%- include('partials/header') %>

  <div class="container">
    <header class="header">
      <h1 class="glitch-effect">📚 Study Time Tracker Pro</h1>
    </header>

    <main>
      <div class="pixel-panel">
        <div class="time-display" id="currentSession">00:00:00</div>
        <div class="stats-grid">
          <div class="stat-item">
            <h3>📅 Hoje</h3>
            <div class="stat-value" id="todayTotal">0h 0m</div>
          </div>
          <div class="stat-item">
            <h3>📊 Semana</h3>
            <div class="stat-value" id="weekTotal">0h 0m</div>
          </div>
        </div>
        <button class="button" id="startStopButton">▶️ Iniciar Sessão</button>
      </div>

      <div class="pixel-panel history">
        <h2>📜 Histórico Completo</h2>
        <div id="sessionsList">
          <% sessions.forEach(session => { %>
            <div class="session-item">
              <div class="session-header">
                <span class="session-time">
                  <%= session.startTime.toLocaleDateString() %>
                  <%= session.startTime.toLocaleTimeString() %>
                </span>
                <% if(session.endTime) { %>
                  <span class="session-duration">
                    ⏱️ <%= Math.round((session.endTime - session.startTime)/60000) %> minutos
                  </span>
                <% } else { %>
                  <span class="session-status">(Em progresso)</span>
                <% } %>
              </div>
              <% if(session.description) { %>
                <p class="session-description"><%= session.description %></p>
              <% } %>
            </div>
          <% }) %>
        </div>
      </div>
    </main>
  </div>

  <script src="/js/app.js"></script>
</body>
</html>